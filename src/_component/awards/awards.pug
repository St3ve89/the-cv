-
    var awardHeader = '#awards';
    var awardList =[{ 
        title:'Employee of the Quarter',
        description:'I have always perfomed a very good standard and my company always got a good feedback',
        location:'Smart Yii Limited',
        date:'2017'
    }];
#award
.award
    .award__header=awardHeader
    each award in awardList
        .award__card
            .award__icon
                span.my-resume__icon--trophy
            .award__title=award.title

            .award__icon
                span.my-resume__icon--info
            .award__description=award.description

            .award__icon
                span.my-resume__icon--map2
            .award__location=award.location

            .award__icon
                span.my-resume__icon--calendar
            .award__date=award.date