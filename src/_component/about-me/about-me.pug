-
    var header = '#about-me'
    var imagePath = "asset/image/cv-image-template2.jpg"
    var myFullName = 'Istvan Acs'
    var myTitle = 'Front-End Developer'
    var slogan = 'I make the front-end world better every day.'
    var achievement={
        title:'Achievement',
        content:'I’m a creative self-taught professional and I build in the Front-end “amazing boats”, so users can surf a better web. I design fluid and responsive websites for the future. Let’s have a chat!'
    }
    var coolStuff = {
        title: 'grab cool stuff',
        buttonList: [
            {
                url: 'https://github.com/St3ve89/the-cv',
                icon: 'github',
                label: 'Click to visit the GitHub project source'
            },
            {
                url: 'asset/cv/Istvan-Acs-cv.docx',
                icon: 'file-word',
                label: 'Click to download the "one page" Microsoft Word version'
            }
        ]
    }
#about-me
.about-me
    .about-me__header=header
    .about-me__avatar-wrapper
        img.about-me__avatar(src=imagePath)
    .about-me__full-name=myFullName
    .about-me__title=myTitle
    .about-me__slogan=slogan

    .about-me__title=achievement.title
    .about-me__content=achievement.content

    .about-me__title=coolStuff.title
    .about-me__link-list
        each button in coolStuff.buttonList
            a.about-me__link(href=button.url, target="_blank")
                span.about-me__link-description=button.label
                span(class=`my-resume__icon--${button.icon}`)